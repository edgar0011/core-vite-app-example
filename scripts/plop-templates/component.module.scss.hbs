@import 'src/styles/common.scss';

.{{camelCase name}} {
  border: 1px solid #00336680;
  padding: 2rem;
  background-color: #EFEFEF;
  overflow: auto;
}

:global {
  // Apply dark theme
  .cui-theme-dark {
    :local {
      .{{camelCase name}} {
        border: 1px solid #00336680;
        background-color: #EFEFEF;
        color: $white;
      }
    }
  }

  // Apply light theme
  .cui-theme-light {
    :local {
      .{{camelCase name}} {
        border: 1px solid #00336680;
        background-color: #EFEFEF;
        color: $black;
      }
    }
  }
}
